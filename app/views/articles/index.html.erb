<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @articles.each do |article| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%= article.title %></h2>
        <h6><%= article.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(article.text).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", article_path(article) %>
      </div>
        <%= link_to 'Edit', edit_article_path(article) %>
<%= link_to 'Delete Article', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
    </div>
    <% end %>
  </div>
</div>


<%= link_to 'New Article', new_article_path %>
