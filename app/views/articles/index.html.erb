<div class="container">
  <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
    <% @articles.each do |article| %>
    <div class="col-xs-12">
      <div class="text-center">
        <h2><%=  link_to  article.title, article_path(article) %></h2>
        <h6><%= article.created_at.strftime('%b %d, %Y') %></h6>
      </div>

      <div>
        <%= raw(article.text).truncate(358) %>
      </div>

      <div class="text-center">
        <%= link_to "READ MORE", article_path(article) %>
      </div>
        <%= link_to 'Edit', edit_article_path(article) %>
<%= link_to 'Delete Article', article_path(article), method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
    </div>
    <% end %>
  </div>
</div>


<%= link_to 'New Article', new_article_path %>
  <%= form_tag(@article_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Recipes" %>
    <%= submit_tag "Search", :name => nil %>
<% end %>

<% if @articles.blank? %>
  <h4>There are no articles  containing the term <%= params[:search] %>.</h4>
<% end %>